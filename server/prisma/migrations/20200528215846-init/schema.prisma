datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String  @default(cuid()) @id
  name     String
  email    String  @unique
  password String
  rating   String  @default("0")
  friends  User[]  @relation("Friends")
}